@model CommentViewModel
<div class="row button-row">
    <div class="col-sm-9">
        <span style="max-width: 100%; word-wrap: break-word">
            <b>@Html.DisplayFor(model => model.Author)</b> - @Html.DisplayFor(model => model.Text)
        </span> 
    </div>

    @if (Model.IsAuthor)
    {
        <div class="col-sm-3">
            <form asp-action="Delete" asp-controller="Comments" method="post">
                <input type="hidden" name="commentId" value="@Model.Id"/>
                <input type="hidden" name="imageId" value="@Model.ImageId" />
                <input type="submit" class="btn btn-danger" value="Delete"/>
            </form>
        </div>
    }
</div>

<hr style="padding: 2px; margin: 2px; margin-right: 120px" />
