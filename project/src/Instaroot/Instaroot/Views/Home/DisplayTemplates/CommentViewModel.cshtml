@model CommentViewModel
<div class="row" style="padding-right: 50px;">
    <div class="col-sm-11 vcenter">
        <span>
            <b>@Html.DisplayFor(model => model.Author)</b> - @Html.DisplayFor(model => model.Text)
        </span> 
    </div>

    @if (Model.IsAuthor)
    {
        <div class="col-sm-1 pull-sm-right vcenter">
            <form asp-action="Delete" asp-controller="Comments" method="post">
                <input type="hidden" name="commentId" value="@Model.Id"/>
                <input type="hidden" name="imageId" value="@Model.ImageId" />
                <input type="submit" class="btn btn-danger" value="X"/>
            </form>
        </div>
    }
</div>

<hr style="padding: 2px; margin-right: 100px" />
