@model CommentViewModel

@Html.DisplayFor(model => model.Author) - @Html.DisplayFor(model => model.Text)

@if (Model.IsAuthor)
{
    <form asp-action="Delete" asp-controller="Comments" method="post">
        <input type="hidden" name="commentId" value="@Model.Id"/>
        <input type="submit" class="btn btn-danger" value="X"/>
    </form>
}